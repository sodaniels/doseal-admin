<!DOCTYPE html>
<html
	class="no-js"
	lang="zxx">
	<head>
		<script
			src="https://code.jquery.com/jquery-3.6.0.min.js"
			crossorigin="anonymous"></script>
		<%- include('../../includes/web/google-analytics.ejs') %>
		<meta charset="utf-8" />
		<meta
			http-equiv="x-ua-compatible"
			content="ie=edge" />
		<meta
			name="csrf-token"
			content="<%= csrfToken %>" />

		<title>Doseal Limited | Pay Bill</title>
		<%- include('../../includes/web/meta.ejs') %> <%-
		include('../../includes/web/head.ejs') %>

		<style>
			/* Styles for spacing and alignment */
			.readOnlyInput {
				background-color: #e6e3e3 !important; /* Light gray background */
			}
			.radio-group {
				display: flex;
				flex-direction: column;
				gap: 20px; /* Spacing between radio items */
				margin-top: 10px;
			}

			.radio-item {
				padding: 15px;
				border: 1px solid #ccc;
				border-radius: 8px;
				display: flex;
				align-items: flex-start;
				gap: 15px;
			}

			.radio-item input[type="radio"] {
				margin-top: 6px;
			}

			.radio-item label {
				display: block;
				cursor: pointer;
			}

			.radio-item strong {
				font-size: 1.1em;
				display: block;
				margin-bottom: 5px;
			}

			.radio-item .subtitle {
				color: #666;
				font-size: 0.9em;
			}
		</style>
		<body>
			<!--********************************
   		Code Start From Here
	******************************** -->

			<!--==============================
     Preloader
    ==============================-->
			<div class="preloader">
				<div class="preloader-inner">
					<span></span>
					<span></span>
					<span></span>
					<span></span>
				</div>
			</div>

			<%- include('../../includes/web/mobile-menu-and-top.ejs') %>
			<!--==============================
	Header Area
    ==============================-->
			<header class="nav-header header-layout3 bg-white">
				<%- include('../../includes/web/header.ejs') %>
			</header>

			<section
				class="shop__area space"
				style="margin-top: 10em">
				<div class="container">
					<div
						class="row align-items-center justify-content-end"
						id="step1">
						<div class="col-lg-3"></div>
						<div class="col-lg-6">
							<div class="contact-form-wrap">
								<div class="title-area mb-30">
									<h2 class="sec-title">Buy ECG</h2>
									<p>
										Search for a meter by entering the phone number linked to
										the meter.
									</p>
								</div>
								<form
									action=""
									method="POST"
									id="processSignupForm"
									class="contact-form ajax-contact">
									<div class="row">
										<div class="col-md-12">
											<div class="form-group">
												<input
													type="tel"
													class="form-control style-border"
													name="phoneNumber"
													id="phoneNumber"
													placeholder="Phone Number* (233244000000)" />
											</div>
										</div>
									</div>
									<div class="form-btn col-12">
										<button
											type="button"
											id="signUpBtn"
											class="btn mt-20">
											<span class="link-effect">
												<span class="effect-1">NEXT</span>
												<span class="effect-1">NEXT</span>
											</span>
										</button>
									</div>
								</form>
							</div>
						</div>
						<div class="col-lg-3"></div>
					</div>

					<div
						class="row align-items-center justify-content-end"
						id="step2"
						style="display: none">
						<div class="col-lg-3"></div>
						<div class="col-lg-6">
							<div class="contact-form-wrap">
								<div class="title-area mb-30">
									<h3 class="sec-title">Select a meter</h3>
									<p>Choose one of the meter options below:</p>
								</div>
								<form
									action=""
									method="POST"
									id="processSignupForm"
									class="contact-form ajax-contact">
									<div class="row">
										<div class="col-md-6">
											<div class="form-group">
												<div class="radio-group">
													<div
														class="radio-group"
														id="meterOptionsContainer"></div>
												</div>
											</div>
										</div>
									</div>
									<div class="form-btn col-12">
										<button
											type="button"
											id="submitMeterID_number"
											class="btn mt-20">
											<span class="link-effect">
												<span class="effect-1">NEXT</span>
												<span class="effect-1">NEXT</span>
											</span>
										</button>
									</div>
								</form>
							</div>
						</div>
						<div class="col-lg-3"></div>
					</div>

					<div
						class="row align-items-center justify-content-end"
						id="step3"
						style="display: none">
						<div class="col-lg-3"></div>
						<div class="col-lg-6">
							<div class="contact-form-wrap">
								<div class="title-area mb-30">
									<h3 class="sec-title">Buy ECG</h3>
									<p>Enter the amount you want to purchase</p>
								</div>
								<form
									action=""
									method="POST"
									id="processSignupForm"
									class="contact-form ajax-contact">
									<div class="row">
										<div class="col-md-12">
											<label>Phone Number</label>
											<div class="form-group readOnlyInput">
												<input
													type="tel"
													class="form-control style-border"
													name="accountPhoneNumber"
													id="accountPhoneNumber"
													placeholder=""
													readonly />
											</div>
										</div>
										<div class="col-md-12">
											<label>Meter Name</label>
											<div class="form-group readOnlyInput">
												<input
													type="tel"
													class="form-control style-border"
													name="meterName"
													id="meterName"
													placeholder=""
													readonly />
											</div>
										</div>
										<div class="col-md-12">
											<label>Meter ID</label>
											<div class="form-group readOnlyInput">
												<input
													type="text"
													class="form-control style-border"
													name="meterId"
													id="meterId"
													placeholder=""
													readonly />
											</div>
										</div>
										<div class="col-md-12">
											<label>Amount</label>
											<div class="form-group">
												<input
													type="number"
													class="form-control style-border"
													name="amount"
													id="amount"
													placeholder="" />
											</div>
										</div>
									</div>
									<div class="form-btn col-12">
										<button
											type="button"
											id="signUpBtn"
											class="btn mt-20">
											<span class="link-effect">
												<span class="effect-1">NEXT</span>
												<span class="effect-1">NEXT</span>
											</span>
										</button>
									</div>
								</form>
							</div>
						</div>
						<div class="col-lg-3"></div>
					</div>
				</div>
			</section>

			<!-- shop-area-end -->

			<footer class="footer-wrapper footer-layout2 overflow-hidden">
				<%- include('../../includes/web/footer.ejs') %>
			</footer>

			<!--********************************
			Code End  Here
	******************************** -->

			<!-- Scroll To Top -->
			<div class="scroll-top">
				<svg
					class="progress-circle svg-content"
					width="100%"
					height="100%"
					viewBox="-1 -1 102 102">
					<path
						d="M50,1 a49,49 0 0,1 0,98 a49,49 0 0,1 0,-98"
						style="
							transition: stroke-dashoffset 10ms linear 0s;
							stroke-dasharray: 307.919, 307.919;
							stroke-dashoffset: 307.919;
						"></path>
				</svg>
			</div>

			<!-- Jquery -->
			<script src="/assets/web/js/services/service-search.js"></script>
			<script src="/assets/web/js/sweetalert2.all.min.js"></script>
			<%- include('../../includes/web/jsfiles.ejs') %>
		</body>
	</head>
</html>
