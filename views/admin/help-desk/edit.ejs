<%- include('../../includes/admin/top-with-style.ejs') %>
    </head>

    <body id="theme-default" class="full_block">


        <div id="left_bar">
            <%- include('../../includes/admin/side-menu.ejs') %>
        </div>

        <div id="container">
            <%- include('../../includes/admin/header-banner.ejs') %>
                <div class="page_title">
                    <span class="title_icon"><span class="folder"></span></span>
                    <h3>Edit Help Desk</h3>


                </div>


                <div id="content">
                    <div class="grid_container">
                        <%if (errors.length> 0) { %> <% errors.forEach(error=> { %>
                                <blockquote class="quote_orange">
                                    <p>
                                        <%- error.msg %>
                                    </p>
                                </blockquote>
                                <% }) %>
                                    <% } %>


                                        <%if (errorMessage) { %>
                                            <blockquote class="quote_orange">
                                                <p>
                                                    <%- errorMessage %>
                                                </p>
                                            </blockquote>
                                            <% } %>


                                                <%if (successMessage) { %>
                                                    <blockquote class="quote_green">
                                                        <p>
                                                            <%- successMessage %>
                                                        </p>
                                                    </blockquote>
                                                    <% } %>

                                                        <div class="grid_8 full_block">
                                                            <form action="/help-desk/edit/<%= help._id %>"
                                                                method="POST" class="form_container left_label">

                                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                                                <div class="widget_wrap">
                                                                    <div class="widget_top">
                                                                        <span class="h_icon list_image"></span>
                                                                        <h6>Edit help</h6>
                                                                    </div>
                                                                    <div class="widget_content">

                                                                        <div class="">
                                                                            <div>
                                                                                <ul>
                                                                                    <li>
                                                                                        <div class="form_grid_12">
                                                                                            <label
                                                                                                class="field_title">Title<span
                                                                                                    style="color: red">*</span></label>
                                                                                            <div class="form_input">
                                                                                                <div class="form-group">
                                                                                                    <input name="title"
                                                                                                        value="<%= userInput.title ? userInput.title : (help ? help.title : '') %>"
                                                                                                        type="text"
                                                                                                        class="form-control"
                                                                                                        title="Please enter a title"
                                                                                                        required />
                                                                                                </div>
                                                                                            </div>
                                                                                        </div>
                                                                                    </li>
                                                                                    <li>
                                                                                        <div class="form_grid_12">
                                                                                            <label
                                                                                                class="field_title">Category
                                                                                                <span
                                                                                                    style="color: red">*</span></label>
                                                                                            <div class="form_input">
                                                                                                <div class="form-group">
                                                                                        
                                                                                                    <select class="form-control" required name="category">
                                                                                                        <option value="">Select Category</option>
                                                                                                        <option value="General Inquiry" <%= (userInput.category === 'General Inquiry' || (!userInput.category && help && help.category === 'General Inquiry')) ? 'selected' : '' %>>General Inquiry</option>
                                                                                                        <option value="Technical Support" <%= (userInput.category === 'Technical Support' || (!userInput.category && help && help.category === 'Technical Support')) ? 'selected' : '' %>>Technical Support</option>
                                                                                                        <option value="Report Fault" <%= (userInput.category === 'Report Fault' || (!userInput.category && help && help.category === 'Report Fault')) ? 'selected' : '' %>>Report Fault</option>
                                                                                                    </select>
                                                                                                    
                                                                                                </div>
                                                                                            </div>
                                                                                    </li>
                                                                                    

                                                                                    <li>
                                                                                        <div class="form_grid_12">
                                                                                            <label
                                                                                                class="field_title">Content</label>
                                                                                            <div class="form_input">
                                                                                                <textarea name="note"
                                                                                                    value="<%= userInput.content ? userInput.content : (help ? help.content : '') %>"
                                                                                                    class="input_grow"
                                                                                                    cols="100" rows="6"
                                                                                                    tabindex="5"
                                                                                                    style="width: auto; height: auto; overflow: hidden;"><%= userInput.content ? userInput.content : (help ? help.content : '') %></textarea>
                                                                                            </div>
                                                                                        </div>
                                                                                    </li>
                                                                                </ul>


                                                                            </div>
                                                                            <div class="modal-footer">
                                                                                <button type="submit"
                                                                                    class="btn btn-primary">Edit
                                                                                    help</button>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>

                    </div>
                    <span class="clear"></span>
                </div>

        </div>
    </body>




    </html>